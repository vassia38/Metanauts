<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="body" alignment="CENTER" prefHeight="427.0" prefWidth="695.0" spacing="20.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.CreateEventController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <HBox id="hbox" alignment="CENTER" cacheShape="false" prefHeight="160.0" prefWidth="655.0" style="-fx-spacing: 5;">
        <VBox alignment="CENTER" style="-fx-spacing: 5;">
            <TextField fx:id="nameTextField" alignment="CENTER" prefHeight="43.0" prefWidth="176.0" promptText="event name" style="-fx-padding: 0;">
                <font>
                    <Font name="Roboto" size="14.0" />
                </font>
            </TextField>
            <TextField fx:id="dateTextField" alignment="CENTER" prefHeight="43.0" prefWidth="176.0" promptText="date: yyyy-MM-dd HH:mm" style="-fx-padding: 0;">
                <font>
                    <Font name="Roboto" size="14.0" />
                </font>
            </TextField>
            <Button fx:id="createButton" alignment="CENTER" cache="true"
                    cacheHint="SPEED" contentDisplay="CENTER"
                    onAction="#createEvent" prefHeight="37.0" prefWidth="200.0"
                    style="-fx-border-insets: 0;" text="Create event"
                    textAlignment="CENTER" textFill="WHITE">
                <font>
                    <Font name="Roboto Bold" size="14.0" />
                </font>
            </Button>
        </VBox>
    </HBox>
</VBox>
