<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" prefHeight="400.0" prefWidth="600.0" style="-fx-padding: 0;" stylesheets="@style.css" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.MainController">
    <HBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="680">
        <VBox maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="680" prefWidth="700" styleClass="profile-page">
            <Label fx:id="profileTitle" prefHeight="50">My profile page</Label>
            <HBox id="profileBtns" alignment="CENTER_RIGHT" prefHeight="50" spacing="50" style="-fx-padding: 10;">
                <Button fx:id="messageButton" onAction="#messageFriend" text="Message" textFill="WHITE">Message</Button>
                <Button fx:id="addFriendButton" onAction="#addFriend" textFill="WHITE">Add friend</Button>
                <Button fx:id="removeFriendButton" onAction="#removeFriend" textFill="WHITE">Remove friend</Button>
                <Button fx:id="cancelRequestButton" onAction="#cancelRequest" textFill="WHITE">Cancel Request</Button>
                <Button fx:id="createGroupButton" onAction="#createGroup" textFill="WHITE">Create group</Button>
            </HBox>
        </VBox>
    </HBox>
</VBox>
