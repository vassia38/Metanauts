<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<VBox alignment="TOP_CENTER" prefHeight="681.0" prefWidth="700.0"
      style="-fx-padding: 10 0 0 0; -fx-spacing: 10" stylesheets="@style.css"
      xmlns="http://javafx.com/javafx/17"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.main.RequestsController">
    <TableView fx:id="tableViewRequests" prefHeight="200.0" prefWidth="578.0">
        <columns>
            <TableColumn fx:id="fromUser" text="From" />
            <TableColumn fx:id="acceptFriendship" />
            <TableColumn fx:id="rejectFriendship" />
        </columns>
    </TableView>
    <TableView fx:id="historyTableViewRequests" prefHeight="200">
        <columns>
            <TableColumn fx:id="historyFromUser" text="From" />
            <TableColumn fx:id="status" />
            <TableColumn fx:id="dateSent" prefWidth="120" />
        </columns>
    </TableView>
</VBox>
