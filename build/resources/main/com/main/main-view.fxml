<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="vbox" alignment="CENTER" prefHeight="427.0" prefWidth="695.0" spacing="20.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.MainController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <TableView fx:id="tableViewUsers" prefHeight="200.0" prefWidth="200.0">
        <columns>
            <TableColumn fx:id="username" prefWidth="219.19997787475586" text="Username" />
            <TableColumn fx:id="first_name" prefWidth="221.6000518798828" text="First Name" />
            <TableColumn fx:id="last_name" prefWidth="216.7999267578125" text="Last Name" />
        </columns>
    </TableView>
    <HBox id="hbox" alignment="CENTER" cacheShape="false" prefHeight="100.0" prefWidth="200.0">
        <children>
            <TextField alignment="CENTER" prefHeight="38.0" prefWidth="174.0" promptText="Enter your username" />
            <Button fx:id="login_button" onAction="#onLoginButtonClick" alignment="CENTER" contentDisplay="CENTER" prefHeight="31.0" prefWidth="77.0" text="Login" textAlignment="CENTER" textFill="#009eff">
                <font>
                    <Font size="15.0" />
                </font>
            </Button>
        </children>
    </HBox>
</VBox>
