<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>

<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<VBox id="body" alignment="TOP_CENTER" spacing="20.0"
      xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.MainController">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <HBox>
        <ImageView fx:id="homeLogo" fitWidth="30" fitHeight="30">
            <Image url="@logo.png"/>
        </ImageView>
        <ComboBox fx:id="comboBoxSearch" editable="true" promptText="Search by username" minHeight="30" prefWidth="500" />
        <Button fx:id="searchButton" minHeight="30" onAction="#searchUser">Search</Button>
    </HBox>

    <HBox prefHeight="500">
        <VBox prefHeight="500">
            <TextField promptText="Search friend list"/>
            <TableView fx:id="tableViewFriends" styleClass="table">
                <columns>
                    <TableColumn fx:id="friendUser" minWidth="100" text="Username" />
                    <TableColumn fx:id="first_name" minWidth="100" text="First Name" />
                    <TableColumn fx:id="last_name" minWidth="100" text="Last Name" />
                </columns>
            </TableView>
        </VBox>
        <VBox styleClass="profile-page" prefWidth="700" prefHeight="500">
            <Label fx:id="profileTitle" prefHeight="50">My profile page</Label>
            <HBox alignment="CENTER_RIGHT" spacing="50" prefHeight="50">
                <Button fx:id="messageButton" onAction="#messageFriend">Message</Button>
                <Button fx:id="addFriendButton" onAction="#addFriend">Add friend</Button>
                <Button fx:id="removeFriendButton" onAction="#removeFriend">Remove friend</Button>
                <Button fx:id="cancelRequestButton" onAction="#cancelRequest">Cancel Request</Button>
            </HBox>
            <TableView fx:id="tableViewRequests" prefHeight="200">
                <columns>
                    <TableColumn fx:id="fromUser" text="From"/>
                    <TableColumn fx:id="acceptFriendship"/>
                    <TableColumn fx:id="rejectFriendship"/>
                </columns>
            </TableView>
            <TableView fx:id="historyTableViewRequests" prefHeight="200">
                <columns>
                    <TableColumn fx:id="historyFromUser" text="From"/>
                    <TableColumn fx:id="status"/>
                    <TableColumn fx:id="dateSent"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>
</VBox>
