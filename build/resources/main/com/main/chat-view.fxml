<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import java.net.URL?>
<BorderPane id="body"
      xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.main.ChatController"
      prefHeight="400.0" prefWidth="600.0">
    <stylesheets>
        <URL value="@style.css"/>
    </stylesheets>
    <top>
        <HBox spacing="400">
            <Button fx:id="back">Back</Button>
            <Label fx:id="destinationLabel">Destination</Label>
        </HBox>
    </top>
    <center>
        <ListView fx:id = "messagesView">
        </ListView>
    </center>
    <bottom>
        <HBox alignment="CENTER_RIGHT">
            <TextArea fx:id = "textarea" prefHeight="90">
            </TextArea>
            <VBox alignment="CENTER">
                <Button fx:id = "send" prefHeight="90">Send</Button>
            </VBox>
        </HBox>
    </bottom>
</BorderPane>
