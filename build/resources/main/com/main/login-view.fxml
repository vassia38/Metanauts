<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox id="body" alignment="CENTER" prefHeight="427.0" prefWidth="695.0" spacing="20.0" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.main.LoginController">
    <stylesheets>
        <URL value="@style.css" />
    </stylesheets>
    <HBox id="hbox" alignment="CENTER" cacheShape="false" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 5;">
      <VBox alignment="CENTER" style="-fx-spacing: 5;">
         <children>
              <TextField fx:id="loginTextField" alignment="CENTER" prefHeight="43.0" prefWidth="176.0" promptText="username" style="-fx-padding: 0;">
               <font>
                  <Font name="Roboto" size="14.0" />
               </font>
            </TextField>
            <TextField fx:id="loginTextField1" alignment="CENTER" prefHeight="43.0" prefWidth="176.0" promptText="password" style="-fx-background-insets: 0;">
               <font>
                  <Font name="Roboto" size="14.0" />
               </font>
            </TextField>
         </children>
      </VBox>
        <Button fx:id="login_button" alignment="CENTER" cache="true" cacheHint="SPEED" contentDisplay="CENTER" onAction="#onLoginButtonClick" prefHeight="37.0" prefWidth="92.0" style="-fx-border-insets: 0;" text="Login" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Roboto Bold" size="14.0" />
         </font></Button>
    </HBox>
   <HBox id="hbox" alignment="CENTER" cacheShape="false" prefHeight="100.0" prefWidth="200.0" style="-fx-spacing: 5;">
      <children>
         <Label alignment="CENTER" prefHeight="45.0" prefWidth="111.0" style="-fx-background-insets: 0;" text="No account?" textFill="WHITE">
            <font>
               <Font size="14.0" />
            </font>
         </Label>
         <Button fx:id="login_button1" alignment="CENTER" cache="true" cacheHint="SPEED" contentDisplay="CENTER" onAction="#onLoginButtonClick" prefHeight="37.0" prefWidth="92.0" style="-fx-border-insets: 0;" text="Register" textAlignment="CENTER" textFill="WHITE">
            <font>
               <Font name="Roboto Bold" size="14.0" />
            </font>
         </Button>
      </children>
   </HBox>
</VBox>
